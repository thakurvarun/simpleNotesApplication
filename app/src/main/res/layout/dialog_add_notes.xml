<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ffe5b4"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/etv_add_note_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:maxLines="1"
        android:maxLength="15"
        android:hint="Enter your Heading - 15 characters only"
        />

    <EditText
        android:id="@+id/etv_add_note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:maxLines="5"
        android:maxLength="300"
        android:hint="Add a new note.....! - 300 characters only"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="5dp"
            android:id="@+id/tempView"
            android:layout_height="1dp"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c1c4a2"
            android:textColor="@android:color/black"
            android:layout_toLeftOf="@+id/tempView"
            android:text="Skip"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"

            android:background="#c1c4a2"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/tempView"
            android:text="Save"/>
    </RelativeLayout>

</LinearLayout>
